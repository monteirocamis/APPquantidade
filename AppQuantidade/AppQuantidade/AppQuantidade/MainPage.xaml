<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="50">

        <Label Text=" Quantidade " 
               HorizontalTextAlignment="Center" 
               FontSize="20" />
        <Label Text=" 1 "
                HorizontalTextAlignment="Center" 
               FontSize="48"
               TextColor="Red" />
        
        <StackLayout Orientation="Horizontal" Spacing="40"> 
            <Button Text=" + "
                    FontSize=" 48"
                    BorderWidth="1" 
                    BorderColor=" #707070" 
                    BackgroundColor="White" 
                    WidthRequest=" 90"
                    HeightRequest=" 90"
                    />
            <Button Text=" - "  
                     FontSize=" 48"
                    BorderWidth="1" 
                    BorderColor=" #707070" 
                    BackgroundColor="White"
                      WidthRequest=" 90"
                    HeightRequest=" 90"
                    />
        </StackLayout>
    </StackLayout>

</ContentPage>
